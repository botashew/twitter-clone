extends layout

block content
    include partials/messages
    form(action="/user/signup", method="POST")
        input(
            type="name"
            id="name"
            name="name"
            placeholder="Enter Name"
        )
        input(
            type="email"
            id="email"
            name="email"
            placeholder="Enter Email"
        )
        input(
            type="password"
            id="password"
            name="password"
            placeholder="Create Password"
        )
        input(
            type="password"
            id="password2"
            name="password2"
            placeholder="Confirm Password"
        )
        button(
            type="submit"
        ) Sing up
        span or
        a(href="/user/login") Login