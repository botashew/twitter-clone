extends layout

block content
    include partials/messages
    form(action="/user/login" method="POST")
        input(
            type="email"
            id="email"
            name="email"
            placeholder="Enter Email"
        )
        input(
            type="password"
            id="password"
            name="password"
            placeholder="Enter Password"
        )
        button(type="submit") Login
        span or
        a(href="/user/signup") Sign Up